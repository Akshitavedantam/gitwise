{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* JSX & React */
    "jsx": "preserve",
    "allowJs": true,
    "isolatedModules": true,

    /* Build Settings */
    "noEmit": true,
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Next.js plugin */
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
